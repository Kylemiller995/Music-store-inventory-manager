<h1>Current album selected</h1>

<p><%=@album.name%></p>
<p><%=@album.artist.artist_name%></p>
<p><%=@album.buy_price%></p>
<p><%=@album.sell_price%></p>
<p><%=@album.stock_level(album.quantity)%>
<p><%=@album.markup(album.buy_price, album.sell_price)%>%</p>


<a href="/albums/<%= @album.id %>/edit">Edit</a>
<form action="/albums/<%= @album.id %>/delete" method="POST"><input type="submit" value="Delete"></form>
